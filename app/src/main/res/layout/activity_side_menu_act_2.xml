<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_menu_layout_bg_1_2"
    android:orientation="vertical"
    android:padding="@dimen/x15"
    android:weightSum="10">

    <GridView
        android:id="@+id/sideMenuListView12"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/downIcon"
        android:layout_below="@+id/upIcon"
        android:layout_gravity="center"
        android:layout_weight="1.4"
        android:cacheColorHint="@null"
        android:choiceMode="singleChoice"
        android:divider="#00000000"
        android:dividerHeight="@dimen/x8"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.6"
        android:padding="@dimen/x5"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/sideMenuImg12"
            android:layout_width="@dimen/x314"
            android:paddingTop="@dimen/x1"
            android:paddingLeft="@dimen/x1"
            android:paddingBottom="@dimen/x1"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/x3"
            android:paddingBottom="@dimen/x3"
            android:paddingRight="@dimen/x3"
            android:background="@drawable/side_menu_layout_text_frame_list">

            <TextView
                android:id="@+id/sideMenuText12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="@dimen/x8"
                android:background="@drawable/side_menu_layout_text_frame"
                android:gravity="top"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/x8" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>