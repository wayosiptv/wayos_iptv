<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <SurfaceView
        android:id="@+id/welPageVideo11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:visibility="visible" />

    <com.youth.banner.Banner
        android:id="@+id/welPageBgm11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false" />

    <RelativeLayout
        android:id="@+id/toplayout11"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:layout_alignParentBottom="true"
        android:background="#339999"
        android:padding="@dimen/x5">

        <TextView
            android:id="@+id/welTimeText11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="15:29"
            android:textColor="@color/white"
            android:textSize="@dimen/x30" />

        <LinearLayout
            android:layout_toRightOf="@+id/welTimeText11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welDateText11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/x30"
                android:text="2019-05-21"
                android:textColor="@color/white"
                android:textSize="@dimen/x18" />

            <TextView
                android:id="@+id/welDateTextEng11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/x3"
                android:layout_marginLeft="@dimen/x30"
                android:text="2019-05-21"
                android:textColor="@color/white"
                android:textSize="@dimen/x15" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/welHotelIcon11"
                android:layout_marginRight="@dimen/x3"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x30" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/welHotelName11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/x3"
                    android:text="酒店名称"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/x16" />
                <TextView
                    android:id="@+id/welHotelEng11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/x3"
                    android:text="Hotel Name"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/x6" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <GridView
        android:layout_marginTop="@dimen/x6"
        android:id="@+id/welGridView11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/toplayout11"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:cacheColorHint="@null"
        android:descendantFocusability="afterDescendants"
        android:focusable="true"
        android:stretchMode="columnWidth"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:horizontalSpacing="@dimen/x10"
        android:listSelector="#00000000"
        android:numColumns="2"
        android:verticalSpacing="@dimen/x8"
        android:padding="@dimen/x10"
        android:scrollbars="none"/>

</RelativeLayout>