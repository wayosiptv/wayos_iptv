<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/welPageVideo5"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.youth.banner.Banner
        android:id="@+id/welPageBgm5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true" />

    <RelativeLayout
        android:id="@+id/welPageLayout5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:gravity="right|center">

            <ImageView
                android:layout_width="@dimen/x20"
                android:visibility="gone"
                android:layout_height="@dimen/x20"
                android:src="@drawable/tq_icon" />

            <TextView
                android:id="@+id/welTmpText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="@dimen/x15" />

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_marginLeft="15dp"
                android:src="@drawable/time_icon" />

            <TextView
                android:id="@+id/welTimeText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="@dimen/x15" />
        </LinearLayout>

        <!--android:src="@drawable/nws"-->

        <ImageView
            android:id="@+id/welHotelIcon5"
            android:layout_width="@dimen/y90"
            android:layout_height="@dimen/y25"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/welHotelName5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welHotelIcon5"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text=""
            android:layout_marginTop="@dimen/y4"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/y8" />


        <RelativeLayout
            android:id="@+id/textRe4"
            android:layout_width="@dimen/y250"
            android:layout_height="@dimen/y110"
            android:layout_centerInParent="true"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/start_page2_layout"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/y10"
                    android:paddingLeft="@dimen/y10"
                    android:paddingRight="@dimen/y10"
                    android:paddingTop="@dimen/y10">

                    <LinearLayout
                        android:id="@+id/textLiner5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/sigleLayout"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/titleCall4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="尊敬的客人："
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/y7"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/helloTextLayout4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <!--android:text="尊敬的："-->


                            <TextView
                                android:id="@+id/welChengHu5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/y7" />

                            <TextView
                                android:id="@+id/welChengHuName5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="欧先生"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/y7"
                                android:visibility="gone" />
                        </LinearLayout>

                        <!--android:text="欢迎下榻诺万森酒店"-->


                        <TextView
                            android:id="@+id/welTitle5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/y7"
                            android:visibility="visible" />


                        <TextView
                            android:id="@+id/welBodyText5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title4"
                            android:ellipsize="end"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/y6" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sigleLayout5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right|bottom"
                        android:layout_marginLeft="@dimen/y90"
                        android:layout_marginTop="@dimen/y5"
                        android:gravity="center|right">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/welZhiWei5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/welSign5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp" />
                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/btnLiner4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/welBtn5"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x20"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_color_selector2"
                android:text="中文"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />


            <Button
                android:id="@+id/welBtnEng5"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x20"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_color_selector2"
                android:text="English"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/welGridLayout5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x105"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone">

        <GridView
            android:id="@+id/welLevelGridView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x30"
            android:cacheColorHint="@null"
            android:choiceMode="singleChoice"
            android:descendantFocusability="afterDescendants"
            android:divider="#00000000"
            android:drawSelectorOnTop="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none"></GridView>

    </RelativeLayout>
</RelativeLayout>
